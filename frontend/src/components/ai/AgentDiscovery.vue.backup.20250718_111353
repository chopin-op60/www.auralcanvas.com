<template>
  <div class="agent-discovery">
    <div class="discovery-header">
      <h3>Discover AI Agents</h3>
      <p>Chat with AI agents created by other users</p>
    </div>

    <div v-loading="loading" class="agents-grid">
      <div v-for="agent in agents" :key="agent.id" class="agent-card">
        <div class="agent-info">
          <el-avatar :src="getFileUrl(agent.avatar)" :size="50">
            <el-icon><User /></el-icon>
          </el-avatar>
          <div class="info-content">
            <h4>{{ agent.agent_name || `${agent.username}'s AI Assistant` }}</h4>
            <p class="username">by {{ agent.username }}</p>
            <p v-if="agent.agent_description" class="description">
              {{ truncateText(agent.agent_description, 100) }}
            </p>
            <div class="agent-status">
              <el-tag size="small" type="success">
                <el-icon><ChatDotSquare /></el-icon>
                Active
              </el-tag>
            </div>
          </div>
        </div>
        <div class="agent-actions">
          <el-button type="primary" size="small" @click="chatWithAgent(agent)">
            <el-icon><ChatDotSquare /></el-icon>
            Start Chat
          </el-button>
        </div>
      </div>
    </div>

    <div v-if="agents.length === 0 && !loading" class="empty-state">
      <el-empty description="No public AI agents available yet">
        <template #description>
          <p>No public AI agents are available at the moment.</p>
          <p>Be the first to create and share your AI agent!</p>
        </template>
        <el-button type="primary" @click="$router.push('/ai')">
          Create Your AI Agent
        </el-button>
      </el-empty>
    </div>

    <!-- Chat Dialog -->
    <el-dialog
      v-model="chatDialogVisible"
      :title="currentAgent?.agent_name || 'AI Chat'"
      width="80%"
      class="agent-chat-dialog"
      @close="cleanupChat"
    >
      <div class="chat-container">
        <div v-if="currentAgent?.external_script_code" class="chat-iframe-container">
          <div ref="chatContainer" class="chat-content"></div>
        </div>
        <div v-else class="no-chat">
          <el-empty description="Chat interface not available" />
        </div>
      </div>
    </el-dialog>
  </div>
</template>

<script setup>
import { ref, onMounted, nextTick } from 'vue'
import { ElMessage } from 'element-plus'
import { User, ChatDotSquare } from '@element-plus/icons-vue'
import { getPublicAgents, getUserAgent } from '@/api/ai'
import { getFileUrl, truncateText } from '@/utils'

const loading = ref(false)
const agents = ref([])
const chatDialogVisible = ref(false)
const currentAgent = ref(null)
const chatContainer = ref()

// 加载公开AI代理
const loadPublicAgents = async () => {
  loading.value = true
  try {
    console.log('Loading public agents...')
    const response = await getPublicAgents({ limit: 20 })
    agents.value = response.data.agents || []
    console.log('Loaded agents:', agents.value.length)
  } catch (error) {
    console.error('Failed to load public agents:', error)
    ElMessage.error('Failed to load AI agents')
  } finally {
    loading.value = false
  }
}

// 与AI代理对话
const chatWithAgent = async (agent) => {
  try {
    console.log('=== chatWithAgent called ===')
    console.log('Agent:', agent)
    
    // 获取完整的代理信息（包括script代码）
    const response = await getUserAgent(agent.user_id)
    currentAgent.value = response.data
    console.log('Full agent data:', currentAgent.value)
    
    chatDialogVisible.value = true

    await nextTick()
    
    if (chatContainer.value && currentAgent.value.external_script_code) {
      chatContainer.value.innerHTML = ''
      
      try {
        console.log('Setting up AI chat with script:', currentAgent.value.external_script_code.length, 'characters')
        
        // 创建临时容器来解析HTML
        const tempDiv = document.createElement('div')
        tempDiv.innerHTML = currentAgent.value.external_script_code.trim()
        
        // 查找script元素
        const scriptElement = tempDiv.querySelector('script')
        
        if (scriptElement) {
          console.log('Found script element:', scriptElement)
          
          // 创建新的script元素
          const newScript = document.createElement('script')
          
          // 复制所有属性
          Array.from(scriptElement.attributes).forEach(attr => {
            newScript.setAttribute(attr.name, attr.value)
            console.log('Set attribute:', attr.name, '=', attr.value)
          })
          
          // 如果有内联代码，也复制过来
          if (scriptElement.textContent) {
            newScript.textContent = scriptElement.textContent
          }
          
          console.log('Created new script element, adding to container')
          
          // 添加到容器
          chatContainer.value.appendChild(newScript)
          
          console.log('Script added successfully')
          
          // 检查脚本是否开始加载
          setTimeout(() => {
            const iframe = chatContainer.value.querySelector('iframe')
            const elements = chatContainer.value.children.length
            console.log('Chat container elements:', elements)
            if (iframe) {
              console.log('Found iframe:', iframe)
            } else {
              console.log('No iframe found yet, checking for other elements...')
              console.log('Container content:', chatContainer.value.innerHTML.length > 0 ? 'Has content' : 'Empty')
            }
          }, 3000)
          
        } else {
          console.error('No script element found in agent code')
          ElMessage.error('Invalid AI chat configuration')
        }
        
      } catch (error) {
        console.error('Failed to load chat script:', error)
        ElMessage.error('Failed to load chat interface')
      }
    } else {
      console.error('Missing chat container or script code')
    }
    
  } catch (error) {
    console.error('Failed to access agent:', error)
    ElMessage.error('Cannot access this AI agent')
  }
}

// 清理聊天容器
const cleanupChat = () => {
  if (chatContainer.value) {
    chatContainer.value.innerHTML = ''
  }
  currentAgent.value = null
  console.log('Chat cleaned up')
}

onMounted(() => {
  loadPublicAgents()
})
</script>

