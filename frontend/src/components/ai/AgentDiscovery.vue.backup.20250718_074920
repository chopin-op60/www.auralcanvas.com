  .chat-container {
    height: 500px;
    border: 1px solid #dcdfe6;
    border-radius: 8px;
    
    .chat-iframe-container {
      height: 100%;
      
      .chat-content {
        height: 100%;
        width: 100%;
      }
    }
    
    .no-chat {
      display: flex;
