  flex: 1;
  background: #f5f7fa;
  transition: margin-left 0.3s ease;
  // ğŸ”§ ç§»é™¤é¡¶éƒ¨æ åï¼Œä¸éœ€è¦é¢„ç•™é¡¶éƒ¨ç©ºé—´
  padding-top: 0;
  
  &.with-sidebar {
    margin-left: 240px;
  }
  
  .main-content {
    width: 100%;
    padding: 0; // ç§»é™¤å†…è¾¹è·ï¼Œè®©é¦–é¡µè‡ªå·±æ§åˆ¶
    margin: 0;
  }
}

.app-footer {
  background: #fff;
  border-top: 1px solid #e4e7ed;
  transition: margin-left 0.3s ease;
  
  &.with-sidebar {
    margin-left: 240px;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
