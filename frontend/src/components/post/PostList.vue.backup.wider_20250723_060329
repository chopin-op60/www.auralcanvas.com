      .masonry-column {
        width: calc(50% - 10px);
      }
    }
    
    &.columns-3 {
      .masonry-column {
        width: calc(33.333% - 14px);
      }
    }
    
    .masonry-column {
      display: flex;
      flex-direction: column;
      gap: 20px;
      
      .masonry-item {
        width: 100%;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
        
        // æ‚¬åœæ•ˆæœ
        &:hover {
          transform: translateY(-2px);
          transition: transform 0.3s ease;
        }
      }
    }
  }
}

// å…¥åœºåŠ¨ç”»
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// å“åº”å¼å¸ƒå±€
